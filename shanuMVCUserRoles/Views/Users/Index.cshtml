
@{
    ViewBag.Title = "Index";
}



@if (ViewBag.displayMenu == "AdminUser")
{
    <h1>Welcome Admin. Now you can create user Role.</h1>
    <h3>
        <li>@Html.ActionLink("Manage Role", $"Index", $"Role")</li>
    </h3>
}
@if (ViewBag.displayMenu == "EmployeeUser")
{
    <h1>Welcome Employee <strong>@ViewBag.Name</strong></h1>
    <div class="row">
        <div class="col-md-4">@LinkExtensions.ActionLink(Html, "Holiday Request", $"Create", $"HolidayViewModels", new { @class = "btn btn-default" })</div>
        <div class="col-md-4">@Html.ActionLink("OOH Request", $"Create", $"OOHRequestViewModels")</div>
        <div class="col-md-4"></div>
