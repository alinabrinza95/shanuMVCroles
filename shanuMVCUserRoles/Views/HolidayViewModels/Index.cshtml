@model IEnumerable<shanuMVCUserRoles.Models.HolidayViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("First Name", "Index", new { sortOrder = ViewBag.FirstNameSortParm })
        </th>
        <th>
            @Html.ActionLink("Last Name", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            @Html.ActionLink("Email", "Index", new { sortOrder = ViewBag.EmailSortParm })
        </th>
        <th>
            @Html.ActionLink("Team Leader Name", "Index", new { sortOrder = ViewBag.TeamLeaderSortParm })
        </th>
        <th>
            @Html.ActionLink("Start Date", "Index", new { sortOrder = ViewBag.DateSortParm })
        </th>
        <th>
            @Html.ActionLink("End Date", "Index", new { sortOrder = ViewBag.EndDateSortParm })
        </th>
        <th>
            @Html.ActionLink("Days Off", "Index", new { sortOrder = ViewBag.DaysOffSortParm })
        </th>
        <th>
            @Html.ActionLink("TLEmail", "Index", new { sortOrder = ViewBag.TeamLeaderEmailsSortParm })
        </th>
        <th>
            @Html.ActionLink("Flag", "Index", new { sortOrder = ViewBag.FlagSortParm })
        </th>
        <th>
            @Html.ActionLink("HolidayType", "Index", new { sortOrder = ViewBag.HolidayTypeSortParm })
        </th>
        <th>
            @Html.ActionLink("SickLeaveIndex", "Index", new { sortOrder = ViewBag.SickLeaveIndexSortParm })
        </th>
     
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TeamLeaderName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DaysOff)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TLEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Flag)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HolidayType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SickLeaveIndex)
        </td>
       
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new { @class = "btn btn-info" }) 
            </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "btn btn-primary" }) 
            </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
